<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Promotion"
  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moodify.PromotionPage">
  <ContentPage.Content>
    <StackLayout BackgroundColor="White">
      <Grid BackgroundColor ="Red">
        <Grid.RowDefinitions>
          <RowDefinition Height="10*" />
          <RowDefinition Height="10*" />
          <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Text="Shared with your friends and get the 20% off!!!!!" TextColor="White"/>
      </Grid>
      <Button Text="Take Picture" TextColor="White" BackgroundColor="Green" Clicked="TakePicture_Clicked" />
      <Button Text="Shareing in FaceBook" TextColor="White" BackgroundColor="Green" Clicked="Share_Clicked" />
      <Label x:Name="errorLabel" />
      <Image x:Name="image" VerticalOptions="Start" />
   
    </StackLayout>
  </ContentPage.Content>
</ContentPage>