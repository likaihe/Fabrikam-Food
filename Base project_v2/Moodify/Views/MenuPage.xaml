<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Moodify.MenuPage">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" />
	</ContentPage.Padding>
	<ContentPage.Content>

		<StackLayout BackgroundColor="White">
      <Label Text="User" TextColor="Red"/>
			<Button Text="Home" TextColor="White" BackgroundColor="Green" Command="{Binding GoHomeCommand}" />
			<!--<Button Text="Second Page" TextColor="White" BackgroundColor="Navy" Command="{Binding GoSecondCommand}" />-->
      <Button Text="Menu" TextColor="White" BackgroundColor="Green" Command="{Binding GoMenuCommand}" />
      <Button Text="Promotion" TextColor="White" BackgroundColor="Green" Command="{Binding GoPromotionCommand}" />

      <Label Text="Administrator" TextColor="Red"/>
      <Button Text="OrderList" TextColor="White" BackgroundColor="Green" Command="{Binding GoOrderCommand}" />
      <Button Text="CreatPromotion" TextColor="White" BackgroundColor="Green" />
      <Button Text="CreatMenu" TextColor="White" BackgroundColor="Green" />
		
    </StackLayout>
	</ContentPage.Content>
</ContentPage>
